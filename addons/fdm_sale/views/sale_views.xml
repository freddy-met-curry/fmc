<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="fdm_view_sale_order_tree_inherit" model="ir.ui.view">
        <field name="name">fdm.sale.order.tree</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree_with_onboarding"/>
        <field name="arch" type="xml">
            <field name="create_date" position="after">
                <field name="write_date"/>
            </field>
        </field>
    </record>
    <record id="fdm_view_sale_order_form_inherit" model="ir.ui.view">
        <field name="name">fdm.sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="validity_date" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>

        </field>
    </record>
</odoo>
