<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="fdm_website_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">fdm_website.res.config.settings.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="abandoned_carts_setting" position="after">
                <div class="col-xs-12 col-lg-6 o_setting_box" id="min_delay_setting">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Management of order dates</span>
                        <div class="content-group">
                            <div class="row mt16">
                                <label for="min_delay"
                                       class="col-lg-4 o_light_label"/>
                                <field name="min_delay" class="oe_inline"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>