<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="fdm_report_delivery_document_inherit" inherit_id="stock.report_delivery_document">
        <xpath expr="//div[@name='div_origin']" position="after">
            <div t-if="o.nbre_pax" cclass="col-auto">
                <strong>Nbr Pax:</strong>
                <p class="m-0" t-field="o.nbre_pax"/>
            </div>
            <div t-if="o.nbre_staff" class="col-auto">
                <strong>Nbr Staff:</strong>
                <p class="m-0" t-field="o.nbre_staff"/>
            </div>
            <div t-if="o.notes_comp" class="col-auto">
                <strong>Additional notes:</strong>
                <p class="m-0" t-field="o.notes_comp"/>
            </div>
        </xpath>
    </template>
</odoo>
